<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WatchActivity"
    tools:deviceIds="wear_square">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="beginCountdown"
        android:text="@string/hello_square" />

    <android.support.wearable.view.DelayedConfirmationView
        android:id="@+id/delayedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:circle_border_color="@color/hex_999df0"
        app:circle_border_width="10dp"
        app:circle_color="@color/hex_149df0"
        app:circle_padding="16dp"
        app:circle_radius="60dp"
        android:background="@drawable/ic_full_cancel"
        app:circle_radius_pressed="60dp"
        app:update_interval="100" />
</FrameLayout>

